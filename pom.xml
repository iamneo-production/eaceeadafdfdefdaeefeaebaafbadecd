<pomodoro-clock>
  <break-settings>
    <label id="break-label">Break Length</label>
    <decrement id="break-decrement">-</decrement>
    <increment id="break-increment">+</increment>
    <length id="break-length">5</length>
  </break-settings>

  <session-settings>
    <label id="session-label">Session Length</label>
    <decrement id="session-decrement">-</decrement>
    <increment id="session-increment">+</increment>
    <length id="session-length">25</length>
  </session-settings>

  <timer-display>
    <label id="timer-label">Session</label>
    <time id="time-left">25:00</time>
  </timer-display>

  <controls>
    <start-stop id="start_stop">Start/Stop</start-stop>
    <reset id="reset">Reset</reset>
  </controls>

  <audio>
    <beep id="beep" src="beep.mp3" />
  </audio>
</pomodoro-clock>
